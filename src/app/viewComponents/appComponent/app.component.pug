<!--The content below is only a placeholder and can be replaced.-->

div.navigation.col-lg-12
    nav.navbar.navbar-default
        div.container-fluid
            div.navbar-header
                a.navbar-brand( [routerLink]="['/home']") {{title}}!!

            ul.nav.navbar-nav
                li
                    a( [routerLink]="['/home']" [routerLinkActive]="['active']" )
                        span.glyphicon.glyphicon-home
                        | Inicio

                li
                    a( [routerLink]="['/animals']" [routerLinkActive]="['active']" )
                        span.glyphicon.glyphicon-star
                        | Animales

                li
                    a( [routerLink]="['/keepers']" [routerLinkActive]="['active']" )
                        span.glyphicon.glyphicon-user
                        | Cuidadores

                li
                    a( [routerLink]="['/store']" [routerLinkActive]="['active']" )
                        span.glyphicon.glyphicon-gift
                        | Tienda

                li
                    a( [routerLink]="['/contact']" [routerLinkActive]="['active']" )
                        span.glyphicon.glyphicon-comment
                        | Contacto


            ul.nav.navbar-nav.navbar-right( *ngIf="!identity")
                li
                    a( [routerLink] ="['/register']" [routerLinkActive]="['active']")
                        span.glyphicon.glyphicon-user
                        | Registro
                li
                    a( [routerLink] ="['/login']" [routerLinkActive]="['active']")
                        span.glyphicon.glyphicon-log-in
                        | Login

            ul.nav.navbar-nav.navbar-right( *ngIf="identity")
                li.avatar
                    img(
                        src="{{ url + 'get-image-file/' + identity.image }}"
                    )
                li.dropdown
                    a.dropdown-toggle( data-toggle ="dropdown" ) {{identity.name}}
                    ul.dropdown-menu
                        li( *ngIf ="identity.role === 'ROLE_ADMIN' ")
                            a.pointer( [routerLink]="['/admin-panel']")
                                span.glyphicon.glyphicon-tasks
                                | Administrador
                        li
                            a.pointer( [routerLink]="['/user-edit']")
                                span.glyphicon.glyphicon-cog
                                | Mis Datos
                        li
                            a.pointer( (click)="logout()" )
                                span.glyphicon.glyphicon-log-out
                                | Cerrar sesion

div.col-lg-11
    router-outlet
