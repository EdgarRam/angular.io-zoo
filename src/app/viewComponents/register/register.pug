include ../../../mixins/views/fields

div.col-lg-6

    h1 {{title}}

    form.col-lg-10( #registerForm="ngForm" '(ngSubmit)'="onSubmit()" )
        p
            label Nombre
            input.form-control(
                type='text',
                name="name"
                #name="ngModel"
                [(ngModel)]='user.name'
                placeholder='Nombre'
                required
            )
            span( *ngIf="!name.valid && name.touched" ) El nombre es obligatorio
        +fieldForm( 'Apellidos' )(
            model= "user.surname"
            modelName="surname"
            require=true
        )
        +fieldForm( 'Correo electronico' )(
            model= "user.email"
            modelName= "email"
            require=true
        )
        +fieldForm( 'Contrase√±a', 'password' )(
            model= "user.password"
            modelName= "password"
            require=true
        )
        input.btn.btn-primary(
            type="submit",
            value="{{title}}"
        )
